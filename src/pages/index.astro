---
import { Icon } from 'astro-icon/components';
import { Button } from '@components/odyssey-theme';
import Layout from 'layouts/Page.astro';
import TextAndImageHero from 'components/sections/heros/TextAndImageHero.astro';

const seo = {
	title: 'Chronicle.ai',
	description: 'Chronicle your feed. Never miss a beat.',
};
---

<Layout {seo}>
	<TextAndImageHero reversed>
		<div slot="text-container">
			<h1>Life comes at you fast.</h1>
			<p>Use Chronicle.ai to keep track of it.</p>
		</div>
		<div slot="btns-container">
			<Button href="/chronicle-web-ui/company/contact" customIcon
				>Interested? Join our Early Adopters<Fragment slot="icon">
					<Icon name="ic:baseline-chevron-right" />
				</Fragment></Button
			>
		</div>
		<picture slot="image-container">
			<img
				src="/chronicle-web-ui/assets/images/landing-1/landing-hero-1.jpg"
				alt="Astro Odyssee"
				id="home-hero-image"
			/>
		</picture>
	</TextAndImageHero>
</Layout>
